<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminHomePageActivity">

    <FrameLayout
        android:id="@+id/fl_admin_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_above="@id/bottom_navigation_bar"/>

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></com.ashokvarma.bottomnavigation.BottomNavigationBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/admin_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fl_admin_container"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/colorPrimary"
        app:elevation="2dp"
        app:pressedTranslationZ="8dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_add_4" />

</RelativeLayout>