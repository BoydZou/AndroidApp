<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_find_food"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="食物名称："
        android:textSize="25sp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/et_find_food_name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:singleLine="true"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/text_find_food"
        android:background="@drawable/bg_input"
        />
    <Button
        android:id="@+id/btn_find_food_submit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/et_find_food_name"
        android:text="查询"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="食物种类："
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@id/text_find_food"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/et_find_food_type"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/et_find_food_name"
        android:layout_toRightOf="@id/text_find_food"
        android:background="@drawable/bg_input"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="卡路里： "
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@id/et_find_food_type"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/et_find_food_calorie"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/et_find_food_type"
        android:layout_toRightOf="@id/text_find_food"
        android:background="@drawable/bg_input"
        />
</RelativeLayout>