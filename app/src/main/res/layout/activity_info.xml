<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF">

    <TextView
        android:id="@+id/text_user_age"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="年 龄:"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_user_age"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/text_user_age"
        android:background="@drawable/bg_input"
        android:maxLines="1"
        android:textSize="25sp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="岁"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/et_user_height" />

    <TextView
        android:id="@+id/text_user_height"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_below="@id/text_user_age"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="身 高:"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_user_height"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/text_user_age"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/text_user_height"
        android:background="@drawable/bg_input"
        android:maxLines="1"
        android:textSize="25sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/text_user_age"
        android:text="厘米"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/et_user_height" />

    <TextView
        android:id="@+id/text_user_weight"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_below="@id/text_user_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="体 重:"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_user_weight"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_user_height"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/text_user_weight"
        android:background="@drawable/bg_input"
        android:maxLines="1"
        android:textSize="25sp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_user_height"
        android:text="千克"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/et_user_height" />
    <TextView
        android:id="@+id/text_user_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@id/text_user_weight"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="血 压:"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_user_blood_pressure"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_user_weight"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/text_user_blood_pressure"
        android:background="@drawable/bg_input"
        android:hint="血压"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/text_bmi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="BMI指数："
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_below="@id/text_user_blood_pressure"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/et_user_bmi"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:hint="系统生成"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@id/text_user_blood_pressure"
        android:layout_toRightOf="@id/text_bmi"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_input"/>

    <!--
    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    -->
</RelativeLayout>